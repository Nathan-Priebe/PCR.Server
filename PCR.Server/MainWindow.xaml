<Window x:Class="PCRServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded" Visibility="Hidden">
    <Grid>
        <Label x:Name="IPLabel" Content="Device IP Address" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="IPTextBox"  HorizontalAlignment="Left" Height="23" Margin="119,13,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label Name="ErrorOutput" Content="Error Text &#xD;&#xA;" HorizontalAlignment="Left" Margin="10,283,0,0" VerticalAlignment="Top" Height="26" Foreground="Red" Visibility="Hidden"/>
        <Button x:Name="StartServer" Content="Start Server" HorizontalAlignment="Left" Margin="432,255,0,0" VerticalAlignment="Top" Width="75" Click="StartServer_Click"/>
        <Button x:Name="StopServer" Content="Stop Server" HorizontalAlignment="Left" Margin="342,255,0,0" VerticalAlignment="Top" Width="75" Click="StopServer_Click"/>
    </Grid>
</Window>

